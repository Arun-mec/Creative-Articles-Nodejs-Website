
<div class="container">
    <div class="row  mt-5">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 m-auto p-3 signup">
            <form action="/user/signin" method="post" role="form" enctype="application/x-www-form-urlencoded">
                <h2><b>Sign in</b></h2>
                Don't have an account? <a href="/user/signup">Sign up.</a>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="text" class="form-control" name="email" id="email" placeholder="Email Address">
                    <span id="email-message" class="message"></span>
                </div>

                <div class="form-group">
                    <label for="pw">Password</label>
                    <input type="text" class="form-control" name="password" id="pw">
                </div>
                
                <div class="mt-3">
                <button type="submit" class="btn btn-outline-dark">Submit</button>
                </div>
            
            </form>
        </div>
    </div>
</div>

<script>

$('#email').on('keyup', function () {
    var re = /\S+@\S+\.\S+/
    if (re.test(String($(this).val()).toLowerCase())){
        $('#email-message').html('').css('color', 'red');
    }else{
        $('#email-message').html('**Please enter a valid emailid').css('color', 'red');
        }
    });

</script>