
<div class="container">
    <div class="row m-1 mt-5">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 m-auto p-3 signup">
            <form action="/user/email-signup" method="post" role="form" enctype="application/x-www-form-urlencoded">
                <h2><b>Create an account</b></h2>
                <div class="form-group">
                    <label for="first_name">First Name</label>
                    <input type="text" class="form-control" name="f_name" id="first_name" placeholder="First Name">
                </div>

                <div class="form-group">
                    <label for="last_name">Last Name</label>
                    <input type="text" class="form-control" name="l_name" id="first_name" placeholder="Last Name">
                </div>

                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="text" class="form-control" name="email" id="email" placeholder="Email Address">
                    <span id="email-message" class="message"></span>
                </div>

                <div class="form-group">
                    <label for="pw">Password</label>
                    <input type="text" class="form-control" name="password" id="pw">
                </div>

                <div class="form-group">
                    <label for="pw_confirm">Confirm Password</label>
                    <input type="text" class="form-control" name="pwConfirm" id="pwConfirm">
                </div>
                <span id="message" class="message"></span>
                
                <div class="form-group">
                    <label for="caption">Tell me something about you.</label>
                    <input type="text" class="form-control" name="caption" id="caption">
                </div>
                <div class="mt-3">
                <button type="submit" class="btn btn-outline-dark">Submit</button>
                </div>
            
            </form>
        </div>
    </div>
</div>

<script>

$('#email').on('keyup', function () {
    var re = /\S+@\S+\.\S+/
    if (re.test(String($(this).val()).toLowerCase())){
        $('#email-message').html('').css('color', 'red');
    }else{
        $('#email-message').html('**Please enter a valid emailid').css('color', 'red');
        }
    });
$('#pwConfirm').on('keyup', function () {
    if ($(this).val() != $('#pw').val()) {
        $('#message').html('**Password is  matching..').css('color', 'red');
    }else{
        $('#message').html('').css('color', 'white');
    }
});

</script>